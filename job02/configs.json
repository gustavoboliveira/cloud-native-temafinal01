{
  "variables": {
    "dockerhub_repository_name":"",
    "dockerhub_username":"",
    "dockerhub_user_password":""
  },

  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "EXPOSE 8080",
        "CMD [\"apache-tomcat-8.5.72/bin/catalina.sh\",\"run\"]"
        ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update", 
        "apt-get install ansible -y"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "/var/lib/jenkins/workspace/job02-provision/job02/playbook.yml"
    },
    {
      "type": "file",
      "source": "/var/lib/jenkins/workspace/job02-provision/job01/build/libs/temafinal01.war",
      "destination": "/apache-tomcat-8.5.72/webapps/temafinal01.war"
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `dockerhub_repository_name`}}",
        "tags": "temafinal01"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username":"{{user `dockerhub_username`}}",
        "login_password":"{{user `dockerhub_user_password`}}"
      }
    ]
  ]
}
